<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/commitMessage_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:textStyle="bold"
        tools:text="Commit message" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:textStyle="bold"
        android:text="@string/committer" />

    <TextView
        android:id="@+id/committerName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Committer name" />

    <TextView
        android:id="@+id/committerEmail_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Committer email" />

    <TextView
        android:id="@+id/committerDate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        tools:text="Committer date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:textStyle="bold"
        android:text="@string/author" />

    <TextView
        android:id="@+id/authorName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Author name" />

    <TextView
        android:id="@+id/authorEmail_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Author email" />

    <TextView
        android:id="@+id/authorDate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Author date" />

</LinearLayout>